@model IEnumerable<BookStoreModel.Models.BookEdition>

<table class="table table-striped  table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>چاپ</th>
            <th>ساڵی چاپ</th>
            <th>شوێنی چاپ</th>
            <th>تیراژ</th>
            <th>نرخی سەر بەرگ</th>
            <th>نرخی فرۆش</th>
            <th>نرخی ته‌سریف</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.EditionInNumber (@item.EditionInString)</td>
            <td>@item.YearOfPrint</td>
            <td>@item.PlaceOfPrint</td>
            <td>@item.NumberOfCopies</td>
            <td>@String.Format("{0:n0}", item.Price)</td>
            <td>@String.Format("{0:n0}", item.SellPrice)</td>
            <td>@String.Format("{0:n0}", item.DischargePrice)</td>
            <td>
                <span class="btn-link" title="چاككردن">
                    <a href="@Url.Action("Edit","BookEditions",new { id = item.Id })">
                        <i class="fal fa-edit"></i>
                    </a>
                </span>

                <span class="btn-link js-remove-edition" data-id="@item.Id" title="سڕینه‌وه‌">
                    <i class="fal fa-trash-alt"></i>
                </span>
            </td>
        </tr>
        }
    </tbody>
</table>

