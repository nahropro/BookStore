@model BookStoreModel.Models.BookEdition

@{
    ViewBag.Title = "چاپی كتێب (زیادكردن)";

    BookStoreModel.Models.Book book = (BookStoreModel.Models.Book)ViewBag.Book;
}

<style>
    .item-div {
        border: solid 1px #808080;
        border-radius: 10px;
        margin-bottom: 5px;
        padding: 5px;
    }

    .item-book-name {
        text-align: center;
        font-size: 20px;
    }

    .item-book-authors {
        padding: 5px;
        font-size: 16px;
        border-left: solid 1px #808080;
    }

    .item-book-translators {
        padding: 5px;
        font-size: 16px;
        border-right: solid 1px #808080;
        margin-right: -1px;
    }
</style>

<p class="page-title">چاپی كتێب</p>

<div class="item-div row">
    <div class="item-book-name col-sm-12">
        <p>@book.Name</p>
    </div>

    <div class="row col-sm-12">
        <div class="item-book-authors col-md-6">
            @book.Authors
        </div>

        <div class="item-book-translators col-md-6">
            @book.Translators
        </div>
    </div>
</div>

<p class="page-sub-title">زیادكردنی چاپ</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.Hidden("BookId", book.Id)

    <div class="form-group">
        <label for="EditionInNumber" class="control-label col-md-2">چاپ به‌ ژماره‌</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.EditionInNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EditionInNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="EditionInString" class="control-label col-md-2">چاپ به‌ نوسین</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.EditionInString, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EditionInString, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="YearOfPrint" class="control-label col-md-2">ساڵی چاپ</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.YearOfPrint, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.YearOfPrint, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="PlaceOfPrint" class="control-label col-md-2">شوێنی چاپ</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.PlaceOfPrint, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PlaceOfPrint, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="NumberOfCopies" class="control-label col-md-2">تیراژ</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NumberOfCopies, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NumberOfCopies, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="Price" class="control-label col-md-2">نرخی سەربەرگ</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="SellPrice" class="control-label col-md-2">نرخی فرۆشیتن</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SellPrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SellPrice, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="DischargePrice" class="control-label col-md-2">نرخی ته‌سریف</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DischargePrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DischargePrice, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus-square"></i>
                زیادبكه
            </button>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("گه‌ڕانه‌وه‌", "Index","Books")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
