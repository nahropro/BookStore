@using BookStoreModel.FilterModels
@model LoanFilter

<style>
    .btn-submit {
        margin-right: 5px;
    }

    .form-check-label{
        margin-left:20px;
    }
</style>

<div>
    <form method="get">
        <div class="form-inline filter-form">
            <div class="col-4" style="text-align:center">
                <div class="input-group mb-1">
                    <div class="input-group-prepend">
                        <span class="input-group-text">تا</span>
                    </div>
                    @Html.EditorFor(model => model.UntilDate,
                        new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="input-group mb-1">
                    <label class="form-check-label">
                        بێ حساب
                        @Html.EditorFor(model => model.ZeroBalance,
                        new { htmlAttributes = new { @class = "form-control"} })
                    </label>

                    <label class="form-check-label">
                        قه‌رزدار
                        @Html.EditorFor(model => model.PositiveBalance,
                        new { htmlAttributes = new { @class = "form-control"} })
                    </label>

                    <label class="form-check-label">
                        خاوه‌ن قه‌رز
                        @Html.EditorFor(model => model.NegativeBalance,
                        new { htmlAttributes = new { @class = "form-control"} })
                    </label>
                </div>
            </div>

            <div class="col-4" style="text-align:center">
                <div class="input-group mb-1">
                    <div class="input-group-prepend">
                        <span class="input-group-text">زیاتر له‌‌</span>
                    </div>
                    @Html.EditorFor(model => model.BalanceGreaterThanOrEqual,
                        new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="input-group mb-1">
                    <div class="input-group-prepend">
                        <span class="input-group-text">كه‌متر له‌</span>
                    </div>
                    @Html.EditorFor(model => model.BalanceLessThanOrEqual,
                        new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="col-4" style="text-align:center">
                <div class="input-group mb-1">
                    <div class="input-group-prepend">
                        <span class="input-group-text">ڕیزكردن به‌ پێی‌</span>
                    </div>

                    <select name="SortBy">
                        <option></option>
                        <option value="0" @(Model.SortBy == LoanFilter.SortByEnum.Customer ? "Selected" : "")>مامه‌ڵه‌كار</option>
                        <option value="1" @(Model.SortBy==LoanFilter.SortByEnum.Balance?"Selected" : "")>مانه‌وه‌</option>
                    </select>

                    <div class="input-group-append">
                        <span class="input-group-text">
                            <label >
                                پێچه‌وانه‌
                                @Html.EditorFor(model => model.SortByDesc)
                            </label>
                        ‌</span>
                    </div>
                </div>

                <div class="input-group mb-1">
                    <button type="submit" class="btn btn-dark btn-submit">
                        <i class="fal fa-search"></i>
                        گه‌ڕان
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>