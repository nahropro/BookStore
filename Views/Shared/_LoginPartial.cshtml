@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li style="margin:5px;">
            @Html.ActionLink(" Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li style="margin:5px;"><a href="javascript:document.getElementById('logoutForm').submit()"> چوونه‌ده‌ره‌ووه‌ <i class="fal fa-sign-out"></i></a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("Login", "Account",null)" id="loginLink">
                چوونه‌ژوورووه <i class="fal fa-sign-in"></i>
            </a>
        </li>
        
    </ul>
}
