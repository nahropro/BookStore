@using BookStoreModel.ViewModels.ItemInvoices.StoreTransfer
@model SelectStoreTransferInvoiceViewModel

@Styles.Render("~/Views/ItemInvoices/Shared/invoice.css")

@{ 
    ViewBag.Title = "پسووڵه‌ی گواستنه‌وه‌ی مه‌خزه‌ن";
}


<div class="row invoice-header">
    <div class="col-4">
        <div>
            <p>
                <b>له‌: </b>
                @Model.FromStoreName
            </p>
        </div>

        <div>
            <p>
                <b>بۆ: </b>
                @Model.ToStoreName
            </p>
        </div>
    </div>

    <div class="col-4 title">
        پسووڵه‌ی گواستنه‌وه‌ی مه‌خزه‌ن
    </div>

    <div class="col-4">
        <div>
            <p>
                <b>ژماره‌ی پسووڵه‌: </b>
                @Model.Id
            </p>
        </div>

        <div>
            <b>ڕێككه‌وت: </b>
            @Html.DisplayFor(model => model.InvoiceDate)
        </div>
    </div>
</div>

<div class="row invoice-body">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>كاڵا</th>
                <th>دانه‌</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.BookEditionId</td>
                    <td>@item.BookName (@item.BookEditionInNumber - @item.BookEditionInString)</td>
                    <td>@item.Qtt</td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <p>
            <b>تێبینی: </b>
            @Model.MoreInfo.Note
        </p>
    </div>
</div>
