@using BookStoreModel.ViewModels.ItemInvoices
@model CreateEditLostInvoiceViewModel

<div class="item-invoice-form">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div>
                <div class="form-inline">
                    <div class="col-lg-4" style="text-align:center">
                        <div class="input-group mb-1">
                            <div class="input-group-prepend">
                                <span class="input-group-text">ڕێێككه‌وت‌</span>
                            </div>
                            @Html.EditorFor(model => model.InvoiceDate,
                                new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.InvoiceDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div>
                @Html.Partial("~/Views/ItemInvoices/Shared/_ItemTable.cshtml", Model.Items)
            </div>

            <div>
                <div class="form-inline">
                    <div class="col-6" style="text-align:center">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">تێبینی</span>
                            </div>
                            @Html.EditorFor(model => model.Note,
                                new { htmlAttributes = new { @class = "form-control", Placeholder= "تێبینی‌" } })
                            @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="button" id="btn-submit" class="btn btn-primary">
                        <i class="fas fa-plus-square"></i>
                        تۆماركردن
                    </button>
                </div>
            </div>
        </div>
    }

</div>

<div>
    @Html.ActionLink("گه‌ڕانه‌وه‌", "Index")
</div>
